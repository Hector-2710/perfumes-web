<nav class="navbar glass">
    <div class="nav-content">
        <div class="nav-left">
            <span class="logo">Essenciarabe</span>
        </div>
        <div class="nav-right" id="nav-actions">
            <!-- Botones iniciales para prevenir parpadeo (SSR) -->
            <button id="login-btn" class="nav-link">Iniciar Sesión</button>
            <button id="register-btn" class="btn-apple">Crear Cuenta</button>
        </div>
    </div>
</nav>

<style>
    .navbar {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 48px;
        z-index: 1000;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .nav-content {
        width: 100%;
        max-width: 1200px;
        padding: 0 24px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .logo {
        font-size: 1.2rem;
        font-weight: 600;
        color: var(--color-text-main);
        letter-spacing: -0.5px;
    }

    .nav-right {
        display: flex;
        gap: 24px;
        align-items: center;
    }

    .nav-link {
        background: none;
        border: none;
        font-size: 0.8rem;
        color: var(--color-text-main);
        opacity: 0.8;
        cursor: pointer;
        transition: opacity 0.2s;
    }

    .nav-link:hover {
        opacity: 1;
        color: var(--color-primary);
    }

    @media (max-width: 640px) {
        .nav-content {
            padding: 0 16px;
        }
        .nav-link {
            display: none;
        }
    }

    .user-greeting {
        font-size: 0.85rem;
        font-weight: 500;
        color: var(--color-text-muted);
    }
</style>

<script>
    const navActions = document.getElementById("nav-actions");
    const token = localStorage.getItem("token");

    function setupAuthListeners() {
        const loginBtn = document.getElementById("login-btn");
        const registerBtn = document.getElementById("register-btn");

        loginBtn?.addEventListener("click", () => {
            document.dispatchEvent(
                new CustomEvent("open-auth", { detail: { mode: "login" } }),
            );
        });

        registerBtn?.addEventListener("click", () => {
            document.dispatchEvent(
                new CustomEvent("open-auth", { detail: { mode: "register" } }),
            );
        });
    }

    if (token && navActions) {
        // En una app real pediríamos los datos del usuario al backend aquí
        navActions.innerHTML = `
            <span class="user-greeting">Bienvenido</span>
            <button id="logout-btn" class="nav-link">Cerrar Sesión</button>
        `;

        document.getElementById("logout-btn")?.addEventListener("click", () => {
            localStorage.removeItem("token");
            window.location.reload();
        });
    } else {
        setupAuthListeners();
    }
</script>
